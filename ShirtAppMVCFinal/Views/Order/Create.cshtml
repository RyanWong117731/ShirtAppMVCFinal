@model ShirtAppMVCFinal.Models.Transaction

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Order</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShippingAdress" class="control-label"></label>
                <input asp-for="ShippingAdress" class="form-control" />
                <span asp-validation-for="ShippingAdress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shirt" class="control-label"></label>
                <select asp-for="ShirtID" class="form-control" asp-items="ViewBag.ShirtID">
                    <option value="">-- Select Shirt --</option>
                </select>
                <span asp-validation-for="ShirtID" class="text-danger" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
